         <font>
            <Font name="System Bold" size="21.0" />
         </font>
      </JFXButton>
      <JFXButton fx:id="cancelBtn" layoutX="474.0" layoutY="614.0" onAction="#cancelOnAction" prefHeight="40.0" prefWidth="119.0" style="-fx-background-color: red;" text="Cancel" textFill="#f8f7f7">
