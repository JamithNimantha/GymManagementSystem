            <TableView fx:id="tblMeasurement" prefHeight="608.0" prefWidth="1504.0">
               <columns>
                  <TableColumn prefWidth="199.0" text="Member Name" />
                  <TableColumn prefWidth="143.0" text="Member ID" />
                  <TableColumn prefWidth="133.0" text="Measurement ID" />
                  <TableColumn prefWidth="106.0" text="Weight(kg)" />
                  <TableColumn prefWidth="106.0" text="Height(CM)" />
                  <TableColumn prefWidth="106.0" text="BMI" />
                  <TableColumn prefWidth="130.0" text="BMI Status" />
                  <TableColumn prefWidth="109.0" text="chest(inches)" />
                  <TableColumn prefWidth="109.0" text="Waist(inches)" />
