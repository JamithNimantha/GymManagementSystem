    <stylesheets>
        <URL value="@/lk/ijse/gymmanagementsystem/css/measurement.css" />
    </stylesheets>
   <children>
      <ScrollPane fx:id="measurementScrollPane" layoutX="40.0" layoutY="89.0" prefHeight="607.0" prefWidth="935.0">
