<AnchorPane id="AnchorPane" prefHeight="565.0" prefWidth="730.0" styleClass="mainFxmlClass" xmlns="http://javafx.com/javafx/8.0.141" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.gymmanagementsystem.controller.AddWorkoutController">
    <stylesheets>
        <URL value="@/lk/ijse/gymmanagementsystem/css/addworkout.css" />
    </stylesheets>
   <children>
      <JFXTextField fx:id="txtWorkout" labelFloat="true" layoutX="99.0" layoutY="42.0" prefHeight="31.0" prefWidth="265.0" promptText="Workot ID">
         <font>
            <Font size="16.0" />
         </font></JFXTextField>
      <JFXTextField fx:id="txtWorkoutName" labelFloat="true" layoutX="101.0" layoutY="101.0" prefHeight="31.0" prefWidth="265.0" promptText="Workot Name">
         <font>
            <Font size="16.0" />
         </font></JFXTextField>
      <JFXTextField fx:id="txtWorkoutDescription" labelFloat="true" layoutX="98.0" layoutY="155.0" prefHeight="31.0" prefWidth="398.0" promptText="Workout Description">
         <font>
            <Font size="16.0" />
         </font></JFXTextField>
      <JFXButton fx:id="saveBtn" layoutX="264.0" layoutY="212.0" onAction="#saveBtnOnAction" prefHeight="26.0" prefWidth="104.0" style="-fx-background-color: blue;" text="Save" textFill="WHITE">
