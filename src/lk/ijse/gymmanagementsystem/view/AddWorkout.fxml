            <TableView fx:id="tbleWorkout" prefHeight="275.0" prefWidth="627.0">
               <columns>
                  <TableColumn prefWidth="109.0" text="Workout ID" />
                  <TableColumn prefWidth="233.0" text="Workout Name" />
                  <TableColumn prefWidth="281.0" text="Workout Description" />
               </columns>
            </TableView>
         </content>
      </ScrollPane>
      <JFXButton fx:id="cancelBtn" layoutX="536.0" layoutY="209.0" onAction="#cancelBtnOnAction" prefHeight="40.0" prefWidth="117.0" style="-fx-background-color: red;" text="Cancel" textFill="WHITE">
         <font>
            <Font name="System Bold" size="21.0" />
         </font>
      </JFXButton>
   </children>
</AnchorPane>
