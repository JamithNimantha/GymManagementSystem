      </JFXButton>
      <JFXButton fx:id="clearBtn" layoutX="401.0" layoutY="210.0" onAction="#clearbtnOnAction" prefHeight="26.0" prefWidth="104.0" style="-fx-background-color: green;" text="Clear" textFill="WHITE">
